<!DOCTYPE html>
<html>
<head>
  <title>Product Catalog</title>
  <style>
    body {
      margin: 0;
      padding: 20px;
      text-align: center;
    }

    #catalog-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
    }

    .product {
      flex: 0 0 40%;
      text-align: center;
      margin: 20px;
    }

    .product img {
      width: 500px;
      height: 400px;
      object-fit: cover;
    }

    .product .price {
      font-size: 30px;
      margin-top: 10px;
    }

    .product .buy-button,
    .product .like-button {
      font-size: 24px;
      padding: 10px 20px;
      border: none;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .product .buy-button {
      background-color: #f8c400;
      color: black;
    }

    .product .buy-button:hover {
      background-color: #ffc107;
    }

    .product .like-button {
      margin-top: 10px;
      background-color: #4CAF50;
      color: white;
    }

    .product .like-button:hover {
      background-color: #45a049;
    }

    .product .like-count {
      font-size: 24px;
      margin-top: 10px;
    }

    h1 {
      font-size: 36px;
      margin-bottom: 20px;
    }

    @media (max-width: 600px) {
      .product {
        flex-basis: 80%;
      }
    }
  </style>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script>
    $(document).ready(function() {
      $('.like-button').click(function(e) {
        e.preventDefault();
        var buttonIndex = $(this).data('index');
        var likeCount = $(this).siblings('.like-count');

        $.ajax({
          url: '/store/like/' + buttonIndex,
          type: 'POST',
          success: function(data) {
            likeCount.text(parseInt(likeCount.text()) + 1);
          }
        });
      });
    });
  </script>
</head>
<body>
  <h1>Product Catalog</h1>

  <div id="catalog-container">
    <% buttons.forEach((button, index) => { %>
      <div class="product">
        <img src="images/five.jpg" alt="Product <%= index + 1 %>">
        <div class="price">$10</div>
        <button class="buy-button">Buy</button>
        <button class="like-button" data-index="<%= index %>">Like</button>
        <span class="like-count"><%= button.likes %></span>
      </div>
    <% }) %>
  </div>
</body>
</html>
